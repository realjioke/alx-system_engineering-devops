#!/bin/bash

# Install Nginx
apt update
apt install -y nginx

# Create custom 404 page
cat << EOF > /var/www/html/404.html
<!DOCTYPE html>
<html>
<head>
    <title>404 Not Found</title>
</head>
<body>
    <h1>404 Not Found</h1>
    <p>Ceci n'est pas une page</p>
</body>
</html>
EOF

# Configure Nginx for custom 404 page
sed -i 's/# server_tokens off;/server_tokens off;\n\n    error_page 404 \/404.html;/' /etc/nginx/nginx.conf

# Restart Nginx
systemctl restart nginx

