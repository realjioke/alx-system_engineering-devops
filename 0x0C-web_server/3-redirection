#!/usr/bin/env bash

# Update the system
sudo apt update

# Install Nginx
sudo apt install -y nginx

# Configure Nginx to redirect /redirect_me
sudo sed -i '37i\\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Restart Nginx
sudo service nginx restart

